<odoo>
    <record
        id="view_purchase_order_type_form_queued_purchase_notify"
        model="ir.ui.view"
    >
        <field name="name">view.purchase.order.type.form.queued.purchase.notify</field>
        <field name="model">purchase.order.type</field>
        <field
            name="inherit_id"
            ref="purchase_order_type.view_purchase_order_type_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook name="notifications">
                    <page name="mail_notification" string="Mail Notifications">
                        <group string="Purchase">
                            <field
                                name="purchase_mail_notify_ids"
                                nolabel="1"
                                colspan="2"
                                context="{'tree_view_ref':'base_queued_notify.mail_notify_mixin_tree'}"
                            />
                        </group>
                    </page>
                    <page name="log_notification" string="Log Note Notifications">
                        <group string="Purchase">
                            <field
                                name="purchase_log_note_notify_ids"
                                nolabel="1"
                                colspan="2"
                                context="{'tree_view_ref':'base_queued_notify.note_notify_mixin_tree'}"
                            />
                        </group>
                    </page>
                    <page name="activity_notification" string="Activity Notifications">
                        <group string="Purchase">
                            <field
                                name="purchase_activity_notify_ids"
                                nolabel="1"
                                colspan="2"
                                context="{'tree_view_ref':'base_queued_notify.activity_notify_mixin_tree'}"
                            />
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
