<odoo>
    <record id="purchase_order_form_queued_purchase_notify" model="ir.ui.view">
        <field name="name">purchase.order.form.queued.purchase.notify</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page
                    string="Notification Queues"
                    name="purchase_notify_queues"
                    attrs="{'invisible': [('has_queues', '=', False)]}"
                >
                    <field name="purchase_queue_ids" />
                    <field name="has_queues" invisible="1" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
