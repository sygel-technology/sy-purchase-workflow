<odoo>
    <record id="product_supplierinfo_category_form_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.category.form.view</field>
        <field name="model">product.supplierinfo.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Category" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" invisible="1" />
                            <field name="code" />
                            <field
                                name="partner_id"
                                options="{'no_create': True, 'no_create_edit': True}"
                            />
                            <field name="use_discount_in_supplierinfo" />
                            <field
                                name="use_different_parent_discount"
                                attrs="{'invisible': ['|', ('use_discount_in_supplierinfo', '=', False), ('parent_id', '=', False)]}"
                            />
                            <field
                                name="discount"
                                attrs="{'invisible': [('use_discount_in_supplierinfo', '=', False)], 'readonly': [('use_different_parent_discount', '=', False), ('parent_id', '!=', False)]}"
                            />
                        </group>
                        <group>
                            <field
                                name="parent_id"
                                options="{'no_create': True, 'no_create_edit': True}"
                            />
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_supplierinfo_category_tree_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.category.tree.view</field>
        <field name="model">product.supplierinfo.category</field>
        <field name="arch" type="xml">
            <tree string="Vendor Pricelist Categories">
                <field name="complete_name" />
                <field name="code" />
                <field name="partner_id" />
                <field name="discount" />
            </tree>
        </field>
    </record>
      <record id="product_supplierinfo_category_search" model="ir.ui.view">
        <field name="name">product.supplierinfo.category.search</field>
        <field name="model">product.supplierinfo.category</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="complete_name" />
                <field name="code" />
            </search>
        </field>
    </record>
    <record id="product_supplierinfo_category_action" model="ir.actions.act_window">
        <field name="name">Vendor Pricelist Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.supplierinfo.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        parent="purchase.menu_purchase_config"
        id="product_supplierinfo_category_menu"
        name="Vendor Pricelist Categories"
        action="product_supplierinfo_category_action"
    />
</odoo>
