<odoo>
    <record
        id="product_supplierinfo_category_product_supplierinfo_form_view"
        model="ir.ui.view"
    >
        <field
            name="name"
        >product.supplierinfo.category.product.supplierinfo.form.view</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field
                    name="product_supplierinfo_category_id"
                    options="{'no_create': True, 'no_create_edit': True}"
                />
                <field name="use_category_discount" invisible="1" />
            </field>
            <xpath expr="//field[@name='discount']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('use_category_discount', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
